{
  "si": {
    "prefix": "sif",
    "body": [
      "si ${1:condition}:",
      "\t${2:conséquences}",
      "fin si"
    ],
    "description": "bloc de code si finsi"
  },

  "sisinon": {
    "prefix": "sis",
    "body": [
      "si ${1:condition}:",
      "\t${2:conséquences}",
      "sinon",
      "\t${3:conséquences}",
      "fin si"
    ],
    "description": "bloc de code si sinon finsi"
  },

  "action": {
    "prefix": ["act", "action"],
    "body": [
      "action ${1:infinitif}:",
      "",
      "\tdéfinitions:",
      "\t\t$2",
      "\tphase prérequis:",
      "\t\t$3",
      "\tphase exécution:",
      "\t\t$4",
      "\tphase épilogue:",
      "\t\t$5",
      "fin action"
    ],
    "description": "bloc de code si sinon finsi"
  },

  "fiche aide": {
    "prefix": "aid",
    "body": [
      "L’aide pour l’action ${1:infinitif} est \"{*${1:infinitif}*}",
      "${2:explication}",
      "{+exemples+} :",
      "> {-${1:infinitif}-}",
      "{+raccourci+} : {-${4:abc}-}\"."
    ],
    "description": "fiche d’aide d’une action"
  }

}